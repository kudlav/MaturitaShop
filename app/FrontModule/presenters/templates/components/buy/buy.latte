<div class="show-cards left-half">
	Způsob dopravy a platby:
	<ul>
		<li n:foreach="$form as $item => $value">
			<div class="item">
				<div class="id normal">{$item}:</div>
				<div class="cleaner"></div>
				<div class="note">{$value['name']} {if isset($value['price'])}({$value['price']} Kč){/if}</div>
			</div>
		</li>
	</ul>
</div>

<div class="show-cards right-half">
	Položky k objenání:
	<ul>
		<li n:foreach="$items as $item">
			<div class="item">
				<div class="spec">
					{if is_file('../www/images/products/homepage/'.strtok($item['photo'], ';'))}
						<img src="{$basePath}/images/products/homepage/{strtok($item['photo'], ';')}" alt="Miniatura produktu">
					{else}
						<img src="{$basePath}/images/products/homepage/default.png" alt="Obrázek produktu">
					{/if}
					<div class="title">{$item['name']}</div>
				</div>
				<div class="price">
					<div class="order-quantity">{$item['count']} ks</div>
				</div>
				<div class="id">{if $show_order_code}{sprintf("%05d", $item['id'])}{/if}</div>
				<div class="cleaner"></div>
				<div class="left">
					{ifset $item['price_text']}{$item['price_text']} {/ifset}{ifset $item['price']}{$item['price']|number:0:',':' '} Kč/ks{/ifset}<br>
				</div>
				<div class="price">
					<strong>{if isset($item['price_text'])}cenu upřesníme{else}{$item['price']*$item['count']|number:0:',':' '} Kč{/if}</strong>
				</div>
				<div class="cleaner"></div>
			</div>
		</li>
	</ul>
</div>
<div class="cleaner"></div>

<div class="total">Celkem k úhradě: <strong>{if isset($total)}{$total|number:0:',':' '} Kč{else}bude upřesněno{/if}</strong></div>
<div class="back"><a href="{plink Product:buy 'deliverPay'}"><button class="form-button">&larr; Doprava a platba</button></a></div>
<div class="right"><a href="{plink Product:submitOrder}"><button class="form-button">Potvrdit objednávku</button></a></div>
